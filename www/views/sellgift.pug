extends layout/layout

block content
  .container
    h1 Sell Gift
    hr
    .row
      // left column
      //- .col-md-3
      //-   .text-center
      //-     img.avatar.img-circle(src='//placehold.it/100', alt='avatar')
      //-     h6 Upload a different photo...
      //-     input.form-control(type='file')
      // edit form column
      .col-md-9.personal-info.col-md-offset-2
        .alert.alert-info.alert-dismissable
          a.panel-close.close(data-dismiss='alert') Ã—
          i.fa.fa-coffee
          |           This is an 
          strong .alert
          | . Use this to show important messages to the user.
        h3 Information Gift to sell.
        form.form-horizontal(role='form')
          .form-group
            label.col-lg-3.control-label Category :
            .col-lg-8
              .ui-select
                select#user_time_zone.form-control
                  option(value='Shoe') Giay The Thao
                  option(value='CardVT10') Card Viettel 10k
                  option(value='CardVT20') Card Viettel 20k
                  option(value='CardVT50') Card Viettel 50k
                  option(value='CardVT100') Card Viettel 100k
                  option(value='Clothes', selected='selected') Quan Ao
                  option(value='Movies') Ve xem phim
          .form-group
            label.col-lg-3.control-label.text-right Series :
            .col-lg-8
              input.form-control(type='text', value='53835805546')
          .form-group
            label.col-lg-3.control-label.text-right Code :
            .col-lg-8
              textarea#comment.form-control(rows='5')
          .form-group
            label.col-lg-3.control-label.text-right Image :
            .col-lg-8
              input#inputFile.form-control(type='file')
              p.help-block Please enter the image.
          .form-group
            label.col-lg-3.control-label.text-right Descriptions:
            .col-lg-8
              textarea#comment.form-control(rows='5')
          .form-group
            label.col-lg-3.control-label Price :
            .col-lg-8
              input.form-control(type='text', value='5$')
          .form-group
            label.col-md-3.control-label FromPrice-ToPrice :
            .col-md-8
              .input-group
                input.form-control(type='number' value="1")
                span#basic-addon1.input-group-addon
                  i.fa.fa-dollar
          .form-group
            label.col-md-3.control-label Expires Date :
            .col-md-8
                #datetimepicker.input-group.date
                  input.form-control(type='text')
                  span.input-group-addon
                    span.glyphicon.glyphicon-calendar

          .form-group
            label.col-md-3.control-label Sell :
            .col-md-8
              label.radio-inline
                input(type='radio', name='optradio')
                | OK
              label.radio-inline
                input(type='radio', name='optradio')
                | No
          .form-group
            label.col-md-3.control-label
            .col-md-8
              input.btn.btn-primary(type='button', value='Save Changes')
              span &nbsp
              input.btn.btn-default(type='reset', value='Cancel')
  hr
  script(type='text/javascript', src="/js/sell.js")