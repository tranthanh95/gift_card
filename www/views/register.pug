extends layout/head
block content
    #signupbox.mainbox.col-md-6.col-md-offset-3.col-sm-8.col-sm-offset-2(style='margin-top:50px')
      .panel.panel-info
        .panel-heading
          .panel-title Register
        .panel-body
          form#signupform.form-horizontal(role='form', method='post', action='/register')
            .form-group
              label.col-md-3.control-label(for='email') Email:
              .col-md-9
                input.form-control.email(type='email', name='email', placeholder='Email Address')
            .form-group
              label.col-md-3.control-label(for='fullname') Fullname:
              .col-md-9
                input.form-control.fullname(type='text', name='fullname', placeholder='Fullname')
            .form-group
              label.col-md-3.control-label(for='firstname') Password:
              .col-md-9
                input.form-control.password(type='password', name='password', placeholder='Password')
            .form-group
              label.col-md-3.control-label(for='lastname') Re-Type:
              .col-md-9
                input.form-control.repassword(type='password', name='repassword', placeholder='Re-type password')
            .form-group
              .col-md-offset-3.col-md-9
                .g-recaptcha(data-sitekey='6Lc4GSUUAAAAACY8_1G3-ACb7cXg9YvcW7pMSmsd')
                br
            .form-group
              // Button
              .col-md-offset-3.col-md-2
                input#btn-signup.btn.btn-info(type='submit', value='Sign Up')
                i.icon-hand-right
              .col-md-2
                a.btn.btn-danger(href='/login' style='margin-right: 5px;') Cancel
                i.icon-hand-right
