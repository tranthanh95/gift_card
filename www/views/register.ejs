<!DOCTYPE html>
<html>
<%- include('layout/head', {title : data.title}); %>

    <body>
        <div id="signupbox" style="margin-top:50px" class="mainbox col-md-6 col-md-offset-3 col-sm-8 col-sm-offset-2">
            <div class="panel panel-info">
                <div class="panel-heading">
                    <div class="panel-title">Register</div>
                </div>
                <div class="panel-body">
                    <form id="signupform" role="form" method="post" action="/register">
                        <div id="signupalert" style="<% if(!data || !data.error ) {%>display:none<%}%>" class="alert alert-danger">
                            <span>Error :</span>
                            <%if (data && data.error) {%>
                                <span><%= data.error%></span>
                                <%}%>
                        </div>
                        <div class="form-group">
                            <!--<label for="email" class="col-md-3 control-label">Email:</label>-->
                            <input type="email" name="email" placeholder="Email Address" class="form-control email" data-error="#errorEmail" />
                            <small style="color: red;" id="errorEmail"></small>
                        </div>
                        <div class="form-group">
                            <!--<label for="fullname" class="col-md-3 control-label">Fullname:</label>-->
                            <!--<div class="col-md-9">-->
                            <input type="text" name="fullname" placeholder="Fullname" class="form-control fullname" data-error="#errorFullname" />
                            <small style="color: red;" id="errorFullname"></small>
                            <!--</div>-->
                        </div>
                        <div class="form-group">
                            <!--<label for="password" class="col-md-3 control-label">Password:</label>-->
                            <!--<div class="col-md-9">-->
                            <input type="password" name="password" placeholder="Password" class="form-control password" data-error="#errorPassword" />
                            <small style="color: red;" id="errorPassword"></small>
                            <!--</div>-->
                        </div>
                        <div class="form-group">
                            <!--<label for="password" class="col-md-3 control-label">Re-Type:</label>-->
                            <!--<div class="col-md-9">-->
                            <input type="password" name="repassword" placeholder="Re-type password" class="form-control repassword" data-error="#errorReTypePassword" />
                            <small style="color: red;" id="errorReTypePassword"></small>
                            <!--</div>-->
                        </div>
                        <div class="form-group">
                            <div class="col-md-offset-3 col-md-9">
                                <div data-sitekey="6Lc4GSUUAAAAACY8_1G3-ACb7cXg9YvcW7pMSmsd" class="g-recaptcha"></div><br/>
                            </div>
                        </div>
                        <div class="form-group">
                            <!-- Button-->
                            <div class="col-md-offset-3 col-md-2">
                                <input id="btn-signup" type="submit" value="Sign Up" class="btn btn-primary" /><i class="icon-hand-right"></i>
                            </div>
                            <div class="col-md-2"><a href="/login" style="margin-right: 5px;" class="btn btn-info">Cancel</a><i class="icon-hand-right"></i></div>
                        </div>
                    </form>
                </div>
            </div>
        </div>
        <script type="text/javascript " src="https://cdnjs.cloudflare.com/ajax/libs/jquery-validate/1.16.0/jquery.validate.min.js "></script>
        <script type="text/javascript ">
            // just for the demos, avoids form submit
            // jQuery.validator.setDefaults({
            //     debug: true,
            //     success: "valid "
            // });
            $("#signupform ").validate({
                rules: {
                    email: {
                        required: true,
                        email: true
                    },
                    fullname: {
                        required: true
                    },
                    password: {
                        required: true,
                        maxlength: 20,
                        minlength: 4
                    },
                    repassword: {
                        required: true,
                        equalTo: ".password"
                    }

                },
                messages: {
                    email: {
                        required: "Please email field not required!",
                        email: "Please enter email! "
                    },
                    fullname: {
                        required: "Please fullname field not required!"
                    },
                    password: {
                        required: "Please password field not required! ",
                        maxlength: "This password field less than 20 characters! ",
                        minlength: "This password field more than 4 characters! "
                    },
                    repassword: {
                        required: "Please password field not required! ",
                        equalTo: "Password not match!"
                    }
                },
                errorElement: "span",
                errorPlacement: function(error, element) {
                    var placement = $(element).data("error");
                    if (placement) {
                        $(placement).append(error)
                    } else {
                        error.insertAfter(element);
                    }
                }
            });
        </script>